gaps inner 4
gaps outer 4

# Initialize wallpaper with swww
exec_always ~/.config/sway/scripts/swww_init_simple.sh

# Make portal backends (wlr) see our Wayland environment
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP

# Apply SwayFX visual enhancements - only if supported
corner_radius 12
blur enable
blur_xray off
blur_passes 2
shadows enable

# Apply visual effects to specific UI elements


layer_effects "swaync" {
    blur enable
    blur_xray enable
    shadows enable
    corner_radius 10
}

# Start audio services
exec_always ~/.config/sway/scripts/start_audio_services.sh



# include custom sway config
include "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf"

# include default sway config
include '$(/usr/libexec/sway/layered-include "/usr/share/sway/config.d/*.conf" "/etc/sway/config.d/*.conf")'

# Enable focus follows mouse
focus_follows_mouse always

exec swaync &

#exec_always dms run &




